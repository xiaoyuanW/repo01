    csdn.comp.shareSina = function (conf) {
        var _w = 642 , _h = 320;
        var param = {
            url:conf.url,
            title:conf.title, /**åˆ†äº«çš„æ–‡å­—å†…å®¹(å¯é€‰ï¼Œé»˜è®¤ä¸ºæ‰€åœ¨é¡µé¢çš„title)*/
            type:'2',
            count:'', /**æ˜¯å¦æ˜¾ç¤ºåˆ†äº«æ•°ï¼Œ1æ˜¾ç¤º(å¯é€‰)*/
            appkey:'', /**æ‚¨ç”³è¯·çš„åº”ç”¨appkey,æ˜¾ç¤ºåˆ†äº«æ¥æº(å¯é€‰)*/
            pic:'', /**åˆ†äº«å›¾ç‰‡çš„è·¯å¾„(å¯é€‰)*/
            ralateUid:'', /**å…³è”ç”¨æˆ·çš„UIDï¼Œåˆ†äº«å¾®åšä¼š@è¯¥ç”¨æˆ·(å¯é€‰)*/
            language:'zh_cn', /**è®¾ç½®è¯­è¨€ï¼Œzh_cn|zh_tw(å¯é€‰)*/
            rnd:new Date().valueOf()
        };
        var temp = [];
        for (var p in param) {
            temp.push(p + '=' + encodeURIComponent(param[p] || ''))
        }
        url = 'http://service.weibo.com/share/share.php?' + temp.join('&');
        window.open(url, 'newwindow', 'height=' + _h + ',width=' + _w + ',top=0,left=0,toolbar=no,menubar=no,scrollbars=no, resizable=no,location=no, status=no');
        //$('<iframe allowTransparency="true" frameborder="0" scrolling="no" src= width="'+ _w+'" height="'+_h+'"></iframe>').appendTo(document.body);
    };


